{
  "name": "hosted-cypress",
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "cy-open": "cypress open --config-file=cypress.config.ts",
    "cy-run": "cypress run --config-file=cypress.config.ts",
    "cy-chrome": "cypress run --browser chrome --config-file=cypress.config.ts",
    "cy-open-dev": "CYPRESS_BASE_URL=https://hosteddoltdb.hosteddev.ld-corp.com cypress open --config-file=cypress.config.ts",
    "cy-run-dev": "CYPRESS_BASE_URL=https://hosteddoltdb.hosteddev.ld-corp.com cypress run --config-file=cypress.config.ts",
    "cy-open-local": "CYPRESS_LOCAL=true && CYPRESS_NUM_TESTS_KEPT_IN_MEMORY=0 && CYPRESS_BASE_URL=http://localhost:3001 cypress open --config-file=cypress.config.ts",
    "cy-run-local": "CYPRESS_LOCAL=true && CYPRESS_BASE_URL=http://localhost:3001 cypress run --config-file=cypress.config.ts",
    "ci": "npm-run-all prettier compile lint",
    "compile": "tsc -b",
    "lint": "eslint --cache --ext .ts,.js .",
    "prettier": "prettier --check 'cypress/**/*.{ts,js}'",
    "prettier:fix": "prettier --write 'cypress/**/*.{ts,js}'"
  },
  "dependencies": {
    "cypress": "^10.0.3",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.17.12",
    "@cypress/github-action": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
